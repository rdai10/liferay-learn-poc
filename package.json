{
  "name": "liferay-learn-poc",
  "version": "1.0.0",
  "description": "This is a proof of concept for the Liferay Learn project using Sphinx",
  "license": "ISC",
  "dependencies": {
    "clay-css": "^2.18.1",
    "node-sass": "^7.0.0",
    "prettier": "^1.18.2"
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "lf",
    "jsxSingleQuote": true,
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true
  },
  "private": true,
  "scripts": {
    "css:watch": "node-sass -w --include-path node_modules/clay-css/src/scss _static/scss/main.scss _static/main.css"
  }
}
